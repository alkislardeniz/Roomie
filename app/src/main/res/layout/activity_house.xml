<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.threek.roomie.Activity.HouseActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/changeRoomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/moneyText"
            android:layout_alignEnd="@+id/thisRoomText"
            android:layout_alignStart="@+id/thisRoomText"
            android:layout_marginBottom="25dp"
            android:text="Change Room" />

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:layout_alignEnd="@+id/muteBox"
            android:layout_alignStart="@+id/playerButton"
            android:layout_below="@+id/playerButton"
            android:layout_marginTop="27dp"></FrameLayout>

        <ImageButton
            android:id="@+id/playerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="27dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <CheckBox
            android:id="@+id/muteBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/playerButton"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="19dp"
            android:text="Mute" />

        <TextView
            android:id="@+id/thisRoomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/changeRoomButton"
            android:layout_centerHorizontal="true"
            android:text="This Room"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/healthBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/healthText"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/healthText"
            android:layout_marginBottom="53dp"
            android:max="10"
            android:progress="10" />

        <ProgressBar
            android:id="@+id/moneyBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/moneyText"
            android:layout_alignStart="@+id/moneyText"
            android:layout_below="@+id/moneyText"
            android:max="10"
            android:progress="10" />

        <ProgressBar
            android:id="@+id/socialityBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/socialityText"
            android:layout_alignStart="@+id/socialityText"
            android:layout_alignTop="@+id/healthBar"
            android:max="10"
            android:progress="10" />

        <ProgressBar
            android:id="@+id/gradesBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/gradesText"
            android:layout_alignStart="@+id/gradesText"
            android:layout_below="@+id/gradesText"
            android:max="10"
            android:progress="10" />

        <TextView
            android:id="@+id/healthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/healthBar"
            android:layout_alignStart="@+id/content"
            android:text="TextView"
            tools:text="Health" />

        <TextView
            android:id="@+id/moneyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/socialityBar"
            android:layout_toEndOf="@+id/playerButton"
            android:text="Money" />

        <TextView
            android:id="@+id/socialityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/socialityBar"
            android:layout_toEndOf="@+id/changeRoomButton"
            android:text="Sociality" />

        <TextView
            android:id="@+id/gradesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/moneyText"
            android:layout_alignBottom="@+id/moneyText"
            android:layout_alignEnd="@+id/content"
            android:text="Grades" />

        <TextView
            android:id="@+id/playerNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/muteBox"
            android:layout_alignEnd="@+id/backpackButton"
            android:layout_toEndOf="@+id/playerButton"
            android:text="TextView"
            android:textSize="18sp" />

        <ToggleButton
            android:id="@+id/backpackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/content"
            android:layout_alignStart="@+id/moneyText"
            android:text="Backpack"
            android:textOff="Open Backpack"
            android:textOn="Close Backpack"
            android:textSize="8sp" />

    </RelativeLayout>
</LinearLayout>
