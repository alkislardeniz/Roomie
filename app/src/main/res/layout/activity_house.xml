<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.threek.roomie.Activities.HouseActivity"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/changeRoomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView4"
            android:layout_alignStart="@+id/textView1"
            android:layout_below="@+id/thisRoomText"
            android:text="Change Room"
            android:textSize="12sp" />

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_alignStart="@+id/playerButton"
            android:layout_below="@+id/playerButton"
            android:layout_marginTop="31dp"></FrameLayout>

        <ImageButton
            android:id="@+id/playerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/ha_side_margin"
            android:layout_marginTop="@dimen/ha_top_margin"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/thisRoomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/content"
            android:layout_marginStart="23dp"
            android:text="This Room"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/playerNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/backpackButton"
            android:layout_alignStart="@+id/backpackButton"
            android:layout_marginStart="@dimen/ha_top_btw_margin"
            android:text="Name"
            android:textSize="14sp" />

        <Button
            android:id="@+id/backpackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/content"
            android:layout_marginStart="@dimen/ha_top_btw_margin"
            android:layout_toEndOf="@+id/playerButton"
            android:text="Open backpack"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/content"
            android:layout_below="@+id/changeRoomButton"
            android:layout_marginTop="@dimen/ha_stat_text_top_bargin"
            android:text="Health"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView1"
            android:layout_below="@+id/changeRoomButton"
            android:layout_marginStart="@dimen/ha_stat_text_btw_bargin"
            android:layout_marginTop="@dimen/ha_stat_text_top_bargin"
            android:text="Money"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/changeRoomButton"
            android:layout_marginStart="@dimen/ha_stat_text_btw_bargin"
            android:layout_marginTop="@dimen/ha_stat_text_top_bargin"
            android:text="Sociality" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/changeRoomButton"
            android:layout_marginStart="@dimen/ha_stat_text_btw_bargin"
            android:layout_marginTop="@dimen/ha_stat_text_top_bargin"
            android:text="Grades"
            android:textSize="15sp" />

        <ProgressBar
            android:id="@+id/healthBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView1"
            android:layout_alignStart="@+id/textView1"
            android:layout_alignTop="@+id/moneyBar"
            android:max="10"
            android:progress="10" />

        <ProgressBar
            android:id="@+id/moneyBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="@dimen/ha_stat_bar_top_bargin"
            android:max="10"
            android:progress="10" />

        <ProgressBar
            android:id="@+id/socialityBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="@dimen/ha_stat_bar_top_bargin"
            android:max="10"
            android:progress="10" />

        <ProgressBar
            android:id="@+id/gradesBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="@dimen/ha_stat_bar_top_bargin"
            android:max="10"
            android:progress="10" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/healthBar"
            android:layout_below="@+id/healthBar"
            android:layout_marginTop="23dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/schoolButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="School"
                android:textSize="12sp" />

            <Button
                android:id="@+id/libraryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lıbrary"
                android:textSize="12sp" />

            <Button
                android:id="@+id/nightClubButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dısco"
                android:textSize="12sp" />

            <Button
                android:id="@+id/cafeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cafe"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
