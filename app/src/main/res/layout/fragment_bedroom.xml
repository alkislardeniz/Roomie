<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.threek.roomie.Fragments.House.BedroomFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@android:color/holo_green_light">

        <ImageButton
            android:id="@+id/item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item2"
            android:layout_toEndOf="@+id/item2"
            android:background="@null"
            android:src="@drawable/kitchen_cupboard"
            />

        <ImageButton
            android:id="@+id/item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item2"
            android:layout_toStartOf="@+id/item2"
            android:background="@null"
            android:src="@drawable/kitchen_fridge"
            />

        <ImageButton
            android:id="@+id/item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/item4"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:background="@null"
            android:src="@drawable/kitchen_stall"
            />

        <ImageButton
            android:id="@+id/item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:background="@null"
            android:src="@drawable/kitchen_table"
            />
    </RelativeLayout>
</FrameLayout>
